<ul>
  <% if ::Refinery::ApiTastingFlights::Admin::ApiTastingFlightsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.api_tasting_flights_admin_api_tasting_flights_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.wines_admin_wines_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::ApiTastingFlights::Admin::ApiTastingFlightsController.sortable? && ::Refinery::ApiTastingFlights::ApiTastingFlight.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Api Tasting Flights"),
                 refinery.api_tasting_flights_admin_api_tasting_flights_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Api Tasting Flights"),
                 refinery.api_tasting_flights_admin_api_tasting_flights_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
