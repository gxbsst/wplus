<%= form_for [refinery, :api_wines_admin, @api_wine] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @api_wine,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :type -%>
    <%= f.text_field :type, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :vintage -%>
    <%= f.text_field :vintage  -%>

  </div>
  
  <div class='field'>
    <%= f.label :name_en -%>
    <%= f.text_field :name_en  -%>

  </div>
  
  <div class='field'>
    <%= f.label :name_zh -%>
    <%= f.text_field :name_zh  -%>

  </div>
  
  <div class='field'>
    <%= f.label :region -%>
    <%= f.text_field :region  -%>

  </div>
  
  <div class='field'>
    <%= f.label :wine_style -%>
    <%= f.text_field :wine_style  -%>

  </div>
  
  <div class='field'>
    <%= f.label :capacity -%>
    <%= f.text_field :capacity  -%>

  </div>
  
  <div class='field'>
    <%= f.label :alcoholicity -%>
    <%= f.text_field :alcoholicity  -%>

  </div>
  
  <div class='field'>
    <%= f.label :variety -%>
    <%= f.text_field :variety  -%>

  </div>
  
  <div class='field'>
    <%= f.label :rating -%>
    <%= f.text_field :rating  -%>

  </div>
  
  <div class='field'>
    <%= f.label :rating_rp -%>
    <%= f.text_field :rating_rp  -%>

  </div>
  
  <div class='field'>
    <%= f.label :rating_ws -%>
    <%= f.text_field :rating_ws  -%>

  </div>
  
  <div class='field'>
    <%= f.label :rating_jr -%>
    <%= f.text_field :rating_jr  -%>

  </div>
  
  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:info].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/api_wines/api_wine", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:info].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :cellar_num -%>
    <%= f.text_field :cellar_num  -%>

  </div>
  
  <div class='field'>
    <%= f.label :cellar_location -%>
    <%= f.text_field :cellar_location  -%>

  </div>
  
  <div class='field'>
    <%= f.label :slug -%>
    <%= f.text_field :slug  -%>

  </div>
  
<div class='field'>

	<%= f.label :image_id -%>
	<%= render :partial => "/refinery/admin/image_picker", :locals => {
		:f => f,
		:field => :image_id,
		:image => f.object.image,
		:toggle_image_display => false
	}
	%>

</div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.api_wines.admin.api_wines.api_wine'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @api_wine.type) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
