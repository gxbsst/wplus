<%= form_for [refinery, :api_wines_admin, @api_wine] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @api_wine,
              :include_object_name => true %>
  
  <div class='field'>
    <%= f.label :wine_style -%>
    <%= f.text_field :wine_style  -%>

  </div>
  
  <%= render :partial => "share/edit_wine_form", 
             :locals => {:f =>f,
                         :rating => @api_wine.rating, 
                         :vintage => @api_wine.vintage,
                         :model_name => "api_wine"} %>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:info].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/api_wines/api_wine", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:info].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  

  
<div class='field'>

	<%= f.label :image_id -%>
	<%= render :partial => "/refinery/admin/image_picker", :locals => {
		:f => f,
		:field => :image_id,
		:image => @api_wine.image,
		:toggle_image_display => false
	}
	%>

</div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.api_wines.admin.api_wines.api_wine'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @api_wine.type) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
