<ul>
  <% if ::Refinery::Drinks::Admin::DrinksController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.drinks_admin_drinks_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_drinks_admin_drink_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Drinks::Admin::DrinksController.sortable? && ::Refinery::Drinks::Drink.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Drinks"),
                 refinery.drinks_admin_drinks_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Drinks"),
                 refinery.drinks_admin_drinks_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
