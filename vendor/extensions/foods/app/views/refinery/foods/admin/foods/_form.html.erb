<%= form_for [refinery, :foods_admin, @food] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @food,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name_en -%>
    <%= f.text_field :name_en, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :name_zh -%>
    <%= f.text_field :name_zh  -%>

  </div>
  
  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.foods.admin.foods.food'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @food.name_en) %>
<% end -%>
