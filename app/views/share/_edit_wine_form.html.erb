 <div class='field'>
  <%= f.label :name_en -%>
  <%= f.text_field :name_en  -%>

</div>

<div class='field'>
  <%= f.label :name_zh -%>
  <%= f.text_field :name_zh  -%>

</div>

<div class='field'>
  <%= f.label :vintage -%>
  <%= select_year Time.local(vintage.to_s), {:field_name => "#{model_name}[vintage]", 
                                :start_year => Time.now.year, 
                                :end_year => 1950, 
                                :prompt => "选择年代"}, {:name => "#{model_name}[vintage]"}-%>

</div>

 <div class='field'>
    <%= f.label :region -%>
    <%= f.text_field :region  -%>

  </div>

  
  <div class='field'>
    <%= f.label :capacity -%>
    <%= f.text_field :capacity  -%>mL

  </div>
  
  <div class='field'>
    <%= f.label :alcoholicity -%>
    <%= f.text_field :alcoholicity  -%>%Vol

  </div>
  
  <div class='field'>
    <%= f.label :variety -%>
    <%= f.text_field :variety  -%>

  </div>

  <div class='field', style="float:left;width:100px;">
    <%= f.label :rating -%>
    <%= select_tag "#{model_name}[rating]", rating_select_option(rating).html_safe  -%>

  </div>

  <div class="field", style="float:left;width:100px;">
    <%= f.label :rating_rp -%>
    <%= f.text_field :rating_rp, :size => "3"  -%>
  </div>

  <div class="field", style="float:left;width:100px;">
    <%= f.label :rating_ws -%>
    <%= f.text_field :rating_ws, :size => "3"  -%>
  </div>

  <div class="field", style="float:left;width:100px;">
    <%= f.label :rating_jr -%>
    <%= f.text_field :rating_jr, :size => "3"  -%>
  </div>

  <div class='field' style="clear:both;">
    <%= f.label :price -%>
    <%= f.text_field :price  -%>元

  </div>

  <div class='field'>
    <%= f.label :cellar_num -%>
    <%= f.text_field :cellar_num  -%>

  </div>
  
  <div class='field'>
    <%= f.label :cellar_location -%>
    <%= f.text_field :cellar_location  -%>

  </div>