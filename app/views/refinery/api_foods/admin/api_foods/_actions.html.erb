<ul>
  <% if ::Refinery::ApiFoods::Admin::ApiFoodsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.api_foods_admin_api_foods_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_api_foods_admin_api_food_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::ApiFoods::Admin::ApiFoodsController.sortable? && ::Refinery::ApiFoods::ApiFood.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Api Foods"),
                 refinery.api_foods_admin_api_foods_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Api Foods"),
                 refinery.api_foods_admin_api_foods_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
