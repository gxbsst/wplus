<%= form_for [refinery, :wines_admin, @wine],:html => {:multipart => true} do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @wine,
              :include_object_name => true %>
  <!-- 
   <label>来自iwine的图片地址</label>
  <%= f.text_field :cover_image_url, :value => @image_url %> -->

    
  <div class='field'>
    <%= f.label :wine_style_id -%>
    <%= collection_select(:wine, :wine_style_id, WineStyle.all, :id, :name, :prompt => "选择类型") -%>

  </div>

<%= render :partial => "/share/edit_wine_form", 
           :locals => {:f => f, 
                       :rating => @wine.rating, 
                       :vintage => @wine.vintage,
                       :model_name => "wine"} %>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:info].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/wines/wine", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:info].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <div class="field">
    <%= f.label :photo_id %>
    <%= render :partial => "/refinery/admin/image_picker", :locals => {
      :f => f,
      :field => :photo_id,
      :image => f.object.photo,
      :toggle_image_display => false
    }
    %>
  </div>

  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.wines.admin.wines.wine'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @wine.vintage) %>
<% end -%>
