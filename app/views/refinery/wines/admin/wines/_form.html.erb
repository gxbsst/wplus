<%= form_for [refinery, :wines_admin, @wine] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @wine,
              :include_object_name => true %>
  
  <div class='field'>
    <%= f.label :name_en -%>
    <%= f.text_field :name_en  -%>

  </div>
  
  <div class='field'>
    <%= f.label :name_zh -%>
    <%= f.text_field :name_zh  -%>

  </div>

  <div class='field'>
    <%= f.label :vintage -%>
    <%= select_year Time.local(@wine.vintage.to_s), {:field_name => "wine[vintage]", 
                                  :start_year => Time.now.year, 
                                  :end_year => 1950, 
                                  :prompt => "选择年代"}, {:name => "wine[vintage]"}-%>

  </div>
    
  <div class='field'>
    <%= f.label :wine_style_id -%>
    <%= collection_select(:wine, :wine_style_id, WineStyle.all, :id, :name, :prompt => "选择类型") -%>

  </div>

  <div class='field'>
    <%= f.label :region -%>
    <%= f.text_field :region  -%>

  </div>

  
  <div class='field'>
    <%= f.label :capacity -%>
    <%= f.text_field :capacity  -%>mL

  </div>
  
  <div class='field'>
    <%= f.label :alcoholicity -%>
    <%= f.text_field :alcoholicity  -%>%Vol

  </div>
  
  <div class='field'>
    <%= f.label :variety -%>
    <%= f.text_field :variety  -%>

  </div>
  
  <div class='field', style="float:left;width:100px;">
    <%= f.label :rating -%>
    <%= select_tag "wine[rating]", rating_select_option(@wine.rating).html_safe  -%>

  </div>

  <div class="field", style="float:left;width:100px;">
    <%= f.label :rating_rp -%>
    <%= f.text_field :rating_rp, :size => "3"  -%>
  </div>

  <div class="field", style="float:left;width:100px;">
    <%= f.label :rating_ws -%>
    <%= f.text_field :rating_ws, :size => "3"  -%>
  </div>

  <div class="field", style="float:left;width:100px;">
    <%= f.label :rating_jr -%>
    <%= f.text_field :rating_jr, :size => "3"  -%>
  </div>

  <div class='field' style="clear:both;">
    <%= f.label :price -%>
    <%= f.text_field :price  -%>元

  </div>
  
  
  <div class='field'>
    <%= f.label :cellar_num -%>
    <%= f.text_field :cellar_num  -%>

  </div>
  
  <div class='field'>
    <%= f.label :cellar_location -%>
    <%= f.text_field :cellar_location  -%>

  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:info].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/wines/wine", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:info].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <div class="field">
    <%= f.label :photo_id %>
    <%= render :partial => "/refinery/admin/image_picker", :locals => {
      :f => f,
      :field => :photo_id,
      :image => f.object.photo,
      :toggle_image_display => false
    }
    %>
  </div>

  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.wines.admin.wines.wine'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @wine.vintage) %>
<% end -%>
